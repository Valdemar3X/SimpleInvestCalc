<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingStart="@dimen/horisontal_padding"
    android:paddingEnd="@dimen/horisontal_padding"
    android:paddingTop="@dimen/vertical_padding"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/et_sum_field"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/invest_sum"
        android:inputType="number"
        android:layout_marginTop="30dp"
        android:layout_marginStart="30dp"
        android:padding="10dp"
        android:textSize="25sp" />
    <EditText
        android:id="@+id/et_month_field"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/invest_period"
        android:inputType="number"
        android:layout_marginTop="60dp"
        android:layout_marginStart="30dp"

        android:padding="10dp"
        android:textSize="25sp" />
    <EditText
        android:id="@+id/et_percentage_field"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/percentage"
        android:inputType="number"
        android:layout_marginTop="90dp"
        android:layout_marginStart="30dp"
        android:padding="10dp"
        android:textSize="25sp" />

    <Button
        android:id="@+id/b_calculation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="110dp"
        android:layout_marginTop="110dp"
        android:onClick="onClick"

        android:text="@string/calculation" />
    <TextView
        android:id="@+id/tv_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/result"
        android:textSize="25sp"
        android:visibility="visible"
        android:layout_marginTop="110dp"
        android:layout_marginStart="130dp"
        />

</LinearLayout>